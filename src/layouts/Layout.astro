---
import '/src/styles/global.css'
import { ClientRouter } from 'astro:transitions';
import ThemeToggle from '../components/ThemeToggle.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---
<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
  		<link href="https://fonts.googleapis.com/css2?family=Lexend:wght@100..900&display=swap" rel="stylesheet">
		<ClientRouter />
	</head>
	<body class="bg-gradient-to-b from-yellow-100 via-amber-200 to-amber-400 dark:from-pink-900 dark:via-pink-950 dark:to-[#260713] text-pink-950  dark:text-amber-100 transition-colors duration-300">
		<ThemeToggle transition:persist />
		<Header />
		<div class="p-4 max-w-5xl mx-auto">
			<slot />
		</div>
		<Footer />
	</body>
</html>